{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"jsx": "react",
		"lib": ["es2015", "dom"],
		"typeRoots": [ "src/types", "node_modules/@types" ],
		"baseUrl": "src",
		"strict": true
	},
	"compileOnSave": false
}
